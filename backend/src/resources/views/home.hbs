<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Cloud Storage Dashboard</title>
  </head>
  <body>
    <div class="dashboard-container">
  <aside class="sidebar">
    <button id="upload-btn">Upload File</button>
    <button id="new-folder-btn">New Folder</button>
    <div class="storage-info">
      <p>Used: {{usedStorage}} / {{totalStorage}}</p>
    </div>
  </aside>

  <main class="file-list">
    <h2>Files & Folders</h2>
    {{#if folders.length}}
      <div class="folders">
        {{#each folders}}
          <div class="folder-card">
            <span class="folder-name">{{name}}</span>
          </div>
        {{/each}}
      </div>
    {{/if}}

    {{#if files.length}}
      <div class="files">
        {{#each files}}
          <div class="file-card">
            <span class="file-name">{{filename}}</span>
            <span class="file-size">{{size}}</span>
            <div class="file-actions">
              <a href="/files/{{_id}}/download">Download</a>
              <a href="/files/{{_id}}/share">Share</a>
              <a href="/files/{{_id}}/delete" onclick="return confirm('Delete this file?')">Delete</a>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No files uploaded yet.</p>
    {{/if}}
  </main>
</div>
  </body>
</html>
